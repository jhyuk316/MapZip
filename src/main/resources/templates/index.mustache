{{>layout/header}}
<h1>Mapzip 서비스</h1>
<div class="col-md-12">
  <!-- 로그인 기능 영역 -->
  <div class="row">
    <div class="col-md-6">
      <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
      {{#userName}}
        Logged in as: <span id="user">{{userName}}</span>
        <a href="/logout" class="btn btn-info active" role="button">Logout</a>
      {{/userName}}
      {{^userName}}
        <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google
          Login</a>
      {{/userName}}
    </div>
  </div>
  <!-- 출력 영역 -->
  <div class="row">
    <div class="col-md-6">
      <form>
        <div class="form-group">
          <label for="title">ID</label>
          <input type="text" class="form-control" id="user-id" placeholder="아이디를 입력하세요">
        </div>
        <div class="form-group">
          <label for="title">PASSWORD</label>
          <input type="password" class="form-control" id="user-password" placeholder="아이디를 입력하세요">
        </div>
        <div class="form-group">
          <label for="title">E-MAIL</label>
          <input type="email" class="form-control" id="user-id" placeholder="아이디를 입력하세요">
        </div>
      </form>
      <a href="/members/join" role="button" class="btn btn-primary">로그인</a>
      <a href="/members/join" role="button" class="btn btn-primary">회원가입</a>
    </div>
  </div>
</div>

{{>layout/footer}}